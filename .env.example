# Server Configuration
PORT=3000
PUBLIC_URL=http://localhost:3000

# Directus (Database Backend)
DIRECTUS_URL=http://localhost:8055
DIRECTUS_TOKEN=your-directus-admin-token-here

# JWT Keys (generate with: npm run generate:keys)
# Primary Key
JWT_PRIMARY_PRIVATE_KEY={"kty":"RSA","kid":"key-1","use":"sig","alg":"RS256","n":"...","e":"...","d":"...","p":"...","q":"...","dp":"...","dq":"...","qi":"..."}
JWT_PRIMARY_PUBLIC_KEY={"kty":"RSA","kid":"key-1","use":"sig","alg":"RS256","n":"...","e":"..."}

# Secondary Key (optional, for key rotation)
JWT_SECONDARY_PRIVATE_KEY=
JWT_SECONDARY_PUBLIC_KEY=

# OIDC Configuration
OIDC_CLIENT_ID=app
OIDC_CLIENT_SECRET=app-secret

# Token Configuration (in seconds)
TOKEN_PREFIX=fidt_
ACCESS_TOKEN_TTL=3600          # 1 hour
REFRESH_TOKEN_TTL=2592000      # 30 days
ID_TOKEN_TTL=3600              # 1 hour
